<p style="color: green"><%= notice %></p>

<h1>Mystery Lunches</h1>
<div id="mystery_lunches">
  <div class="container m-2">
    <% if MysteryLunch.any? %>
      <%= form_with url: "/mystery_lunches", method: :get do |form| %>
        <%= form.select :month, 1..12 %>

        <%= form.select :year, Date.today.year.. MysteryLunch.first.created_at.year %>
        <div>
          <%= form.button "Filter", type: "submit", :class=> "btn btn-primary" %>

        </div>
      <% end %>
    <% end %>
  </div>

<div class="container m-2">
  <% @mystery_lunches.each do |mystery_lunch| %>
    <%= render mystery_lunch %>
  <% end %>
</div>

</div>

