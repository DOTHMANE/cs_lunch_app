<div id="<%= dom_id employee %>">
  <div class="card m-5" style="width: 18rem;">
    <%= link_to  image_tag(employee.photo, class: "card-img-top") %>
    <div class="card-body">
      <h5 class="card-title"> <%= employee.name %></h5>
      <p class="card-text">
        <%= employee.department.name %>
      </p>
      <%= link_to "Show this employee", employee, class: "btn btn-primary" %>
    </div>
  </div>
</div>
